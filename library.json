{
	"name": "EspNexus",
	"description": "A communication and routing system using BLE, ESP-NOW, and LoRa for wearable LED devices.",
	"keywords": ["BLE", "ESP-NOW", "LoRa", "communication", "routing", "IoT"],
	"authors": [
		{
			"name": "Alison Alva",
			"email": "Allie.Leth@gmail.com",
			"maintainer": true
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Allie-Leth/EspNexus.git"
	},
	"version": "1.0.0",
	"license": "MIT",
	"frameworks": "arduino",
	"platforms": "espressif32",
	"headers": "EspNexus.h",
	"export": {
		"exclude": [
			"docs",
			"tests",
			".vscode",
			"platformio.ini",
			"README.md",
			".pio",
			".DS_Store",
			"*.log"
		]
	},
	"build": {
		"srcFilter": [
			"+<src/>",
			"+<*.cpp>",
			"+<*.h>",
			"-<tests>",
			"-<docs>"
		],
		"includeDir": "src/**",
		"srcDir": "src",
		"libArchive": false
	}
}
